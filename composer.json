{
    "name": "sqlitecloud/sqlitecloud",
    "description": "A Python package for working with SQLite databases in the cloud.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "sqlitecloud",
        "sqlite"
    ],
    "homepage": "https://sqlitecloud.io/",
    "autoload": {
        "psr-4": {
            "SQLiteCloud\\SQLiteCloud\\": "src/"
        }
    },
    "minimum-stability": "alpha",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.5",
        "vlucas/phpdotenv": ">=5.6",
        "friendsofphp/php-cs-fixer": ">=2.19",
        "squizlabs/php_codesniffer": "^3.10",
        "vimeo/psalm": ">=2.0",
        "phpmd/phpmd": "^2.15"
    },
    "scripts": {
        "cs": "phpcs --standard=PSR12 --runtime-set ignore_warnings_on_exit 1 ./src",
        "csfixer": "php-cs-fixer fix ./src",
        "psalm": "psalm",
        "phpmd": "phpmd src/ text phpmd-ruleset.xml"
    }
}
